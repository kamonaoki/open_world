<body class="login-page">

<div class="login-container">
  <div class="login-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "avatar_form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "名前を入力してください", class: "input-field" %>
      </div>

      <div class="form-group">
        <%= f.text_field :profile, placeholder: "自己紹介を入力してください", class: "input-field" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "メールアドレスを入力してください" , class: "input-field" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワードを入力してください(6文字以上)", class: "input-field" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードを確認してください", class: "input-field" %>
      </div>
     
      <div class="form-group">
        <%= f.label :プロフィール画像 %><br />
        <%= f.file_field :avatar ,class: "input-field" %>
      </div>
      <div id="avatar_previews"></div>
      <div class="form-group">
        <%= f.submit "サインアップ" ,class: "login-button" %>
      </div>
        <% end %>

       <div class="signup-link">
        <p>登録済みの方は <%= link_to 'こちら', new_user_session_path %> からどうぞ。</p>
       </div>
     </div> 
    </div>
      <section class="showcase">
        <video src="/images/fantasy.mp4" autoplay muted loop></video>
        <div class="overlay"></div>
      </section>
</body>