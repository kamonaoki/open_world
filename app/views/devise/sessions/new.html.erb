<div class="contents row">
  <div class="container">
    <h2>ログイン</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力してください" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワードを入力してください" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :パスワードを記録 %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <div class="signup-link">
      <p>新規登録の方は <%= link_to 'こちら', new_user_registration_path %> からどうぞ。</p>
    </div>
  </div>
</div>
